{
    "name": "fruit-shop",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --watchAll",
        "test-ci": "react-scripts test --watchAll=false --bail --coverage --coverageDirectory=coverage --runInBand",
        "eject": "react-scripts eject",
        "postinstall": "npm run start:husky",
        "start:husky": "husky install",
        "precommit": "react-scripts test --silent --noStackTrace --runInBand --coverage --watchAll=false --coverageDirectory=coverage"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.11.47",
        "@types/react": "^18.0.16",
        "@types/react-dom": "^18.0.6",
        "husky": "^8.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.4.0",
        "react-scripts": "5.0.1",
        "react-to-print": "^2.14.7",
        "styled-components": "^5.3.5",
        "typescript": "^4.7.4",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@types/styled-components": "^5.1.25",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-plugin-react": "^7.30.1",
        "prettier": "^2.7.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
